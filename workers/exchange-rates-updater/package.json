{
  "name": "@pooltogether/exchange-rates-updater",
  "version": "1.0.0",
  "description": "A cloudflare worker to keep the KV fresh with data from CoinGeckos exchange rates.",
  "main": "dist/worker.js",
  "scripts": {
    "reinstall": "rm -rf dist && rm -rf node_modules && yarn",
    "build": "webpack",
    "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "lint": "eslint --max-warnings=0 src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "publish-prod": "wrangler publish"
  },
  "author": "PoolTogether <hello@pooltogether.com>",
  "license": "MIT",
  "eslintConfig": {
    "root": true,
    "extends": [
      "typescript",
      "prettier"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.0.0",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-typescript": "^3.0.0",
    "prettier": "^2.3.0",
    "service-worker-mock": "^2.0.5",
    "ts-loader": "^9.2.2",
    "typescript": "^4.8.3",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}
